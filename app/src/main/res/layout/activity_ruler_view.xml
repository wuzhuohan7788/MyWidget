<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rulerview.RulerViewActivity">

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/btn_ok"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.inkbird.recyclerdemo.rulerview.RulerView
        android:id="@+id/rulerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/value"
        app:rv_bgColor="#fcfffc"
        app:rv_firstScale="2"
        app:rv_isBgRoundRect="true"
        app:rv_largeScaleColor="#50b586"
        app:rv_largeScaleStroke="5dp"
        app:rv_maxScale="100"
        app:rv_midScaleColor="#999999"
        app:rv_midScaleStroke="3dp"
        app:rv_minScale="0"
        app:rv_resultNumColor="#50b586"
        app:rv_resultNumTextSize="20sp"
        app:rv_rulerHeight="50dp"
        app:rv_rulerToResultgap="30dp"
        app:rv_scaleCount="5"
        app:rv_scaleGap="20dp"
        app:rv_scaleLimit="5"
        app:rv_scaleNumColor="#666666"
        app:rv_scaleNumTextSize="16sp"
        app:rv_showScaleResult="false"
        app:rv_smallScaleColor="#aaaaaa"
        app:rv_smallScaleStroke="2dp"
        app:rv_unit="kg"
        app:rv_unitColor="#50b586"
        app:rv_unitTextSize="10sp"
        tools:layout_editor_absoluteX="192dp" />

</androidx.constraintlayout.widget.ConstraintLayout>