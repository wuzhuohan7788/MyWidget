<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTextView">
        <attr name="my_text" format="string" />
        <attr name="my_textSize" format="dimension" />
        <attr name="my_textColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleView">
        <attr name="cv_progressStartColor" format="reference|color" />
        <attr name="cv_progressEndColor" format="reference|color" />
        <attr name="cv_progressBackGroundColor" format="reference|color" />
        <attr name="cv_ringWidth" format="integer" />
        <attr name="cv_progressHead" format="boolean" />
        <attr name="cv_pattern">
            <enum name="simple" value="0" />
            <enum name="colorful" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ProbeIdCircleView">
        <attr name="pid_circleColor" format="reference|color" />
        <attr name="pid_textColor" format="reference|color" />
        <attr name="pid_isFull" format="boolean" />
        <attr name="pid_text" format="string" />
        <attr name="pid_ringWidth" format="integer" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="above_wave_start_color" format="color"/>
        <attr name="above_wave_end_color" format="color"/>
        <attr name="blow_wave_start_color" format="color"/>
        <attr name="blow_wave_end_color" format="color"/>
        <attr name="progress" format="integer"/>
        <attr name="wave_length" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="slow" value="3"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="RulerView">
        <attr name="rv_rulerHeight" format="dimension" />               <!--尺子的高度-->
        <attr name="rv_rulerToResultgap" format="dimension" />          <!--尺子距离结果的高度-->
        <attr name="rv_scaleGap" format="dimension" />                  <!--刻度间距-->
        <attr name="rv_scaleCount" format="integer" />                  <!--刻度数-->
        <attr name="rv_firstScale" format="float" />                    <!--默认选中的刻度-->
        <attr name="rv_maxScale" format="integer" />                    <!--最大刻度-->
        <attr name="rv_minScale" format="integer" />                    <!--最小刻度-->
        <attr name="rv_bgColor" format="color" />                       <!--背景色-->
        <attr name="rv_smallScaleColor" format="color" />               <!--小刻度的颜色-->
        <attr name="rv_midScaleColor" format="color" />                 <!--中刻度的颜色-->
        <attr name="rv_largeScaleColor" format="color" />               <!--大刻度的颜色-->
        <attr name="rv_scaleNumColor" format="color" />                 <!--刻度数的颜色-->
        <attr name="rv_resultNumColor" format="color" />                <!--结果字体的颜色-->
        <attr name="rv_unit" format="string" />                         <!--单位-->
        <attr name="rv_unitColor" format="color" />                     <!--单位颜色-->
        <attr name="rv_smallScaleStroke" format="dimension" />          <!--小刻度的宽度-->
        <attr name="rv_midScaleStroke" format="dimension" />            <!--中刻度的宽度-->
        <attr name="rv_largeScaleStroke" format="dimension" />          <!--大刻度的宽度-->
        <attr name="rv_resultNumTextSize" format="dimension" />         <!--结果字体大小-->
        <attr name="rv_scaleNumTextSize" format="dimension" />          <!--刻度字体大小-->
        <attr name="rv_unitTextSize" format="dimension" />              <!--单位字体大小-->
        <attr name="rv_showScaleResult" format="boolean" />             <!--是否显示结果值-->
        <attr name="rv_isBgRoundRect" format="boolean" />               <!--背景是否圆角-->
        <attr name="rv_scaleLimit" format="integer" />                <!--相邻2个刻度之间的数量-->
    </declare-styleable>
</resources>